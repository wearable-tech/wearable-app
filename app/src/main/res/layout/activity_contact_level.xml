<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.wearableapp.users.ContactLevelActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/button_save_contact"
        android:layout_below="@+id/edittext_contact_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome:"
        android:id="@+id/textview_contact_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail:"
        android:id="@+id/textview_contact_email"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textview_contact_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nivel:"
        android:id="@+id/textview_contact_level"
        android:layout_below="@+id/textview_contact_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_contact_name"
        android:layout_above="@+id/textview_contact_email"
        android:layout_toRightOf="@+id/textview_contact_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_contact_email"
        android:layout_alignBottom="@+id/textview_contact_email"
        android:layout_alignLeft="@+id/edittext_contact_name"
        android:layout_alignStart="@+id/edittext_contact_name"
        android:layout_alignRight="@+id/edittext_contact_name"
        android:layout_alignEnd="@+id/edittext_contact_name"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/edittext_contact_level"
        android:layout_alignBottom="@+id/textview_contact_level"
        android:layout_alignLeft="@+id/edittext_contact_email"
        android:layout_alignStart="@+id/edittext_contact_email"
        android:layout_alignRight="@+id/edittext_contact_email"
        android:layout_alignEnd="@+id/edittext_contact_email" />

</RelativeLayout>
